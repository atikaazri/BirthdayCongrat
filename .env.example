# ============= MESSAGING SERVICE CONFIGURATION =============
# Choose between 'twilio' or 'ultramsg'
MESSAGING_SERVICE=ultramsg

# Twilio Configuration (if using Twilio)
TWILIO_SID=your_twilio_sid_here
TWILIO_AUTH=your_twilio_auth_token_here
TWILIO_PHONE=+1234567890

# UltraMsg Configuration (if using UltraMsg)
ULTRAMSG_INSTANCE_ID=your_instance_id_here
ULTRAMSG_TOKEN=your_token_here

# ============= DATA SOURCE CONFIGURATION =============
# Choose between 'csv' or 'postgresql'
DATA_SOURCE_TYPE=csv

# PostgreSQL Configuration (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=birthday_vouchers
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# ============= CAFE CUSTOMIZATION =============
CAFE_NAME=Hey Hey Cafe
CAFE_LOCATION=Dubai, UAE
CAFE_PHONE=+971-4-XXXX-XXXX
CAFE_EMAIL=info@heyheycafe.com
CAFE_WEBSITE=www.heyheycafe.com
CAFE_LOGO_URL=https://via.placeholder.com/200
CAFE_TIMEZONE=Asia/Dubai

# ============= VOUCHER SETTINGS =============
VOUCHER_VALIDITY_HOURS=24
VOUCHER_REWARD=FREE Drink
VOUCHER_VALUE=$15

# ============= BIRTHDAY MESSAGE SCHEDULING =============
BIRTHDAY_MESSAGE_ENABLED=True
BIRTHDAY_MESSAGE_HOUR=13
BIRTHDAY_MESSAGE_MINUTE=30

# ============= BRANDING =============
BRAND_COLOR_PRIMARY=#4CAF50
BRAND_COLOR_SECONDARY=#45a049
BRAND_EMOJI=â˜•

# ============= FEATURES =============
ENABLE_QR_CODE_GENERATION=True
ENABLE_FLASK_UI=True
ENABLE_FASTAPI=True
ENABLE_WHATSAPP_SENDING=True

# ============= SERVER CONFIGURATION =============
FLASK_PORT=5000
FASTAPI_PORT=8000
DEBUG_MODE=False

# ============= LOGGING =============
LOG_LEVEL=INFO
LOG_FILE=birthday_system.log
